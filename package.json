{
  "name": "www.bit-ink.com",
  "version": "0.0.1",
  "description": "Home page for bit-ink.com",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run bower-install && npm run bundle-client",
    "bower-install": "if [ -d \"$OPENSHIFT_REPO_DIR\" ]; then (export HOME=\"$OPENSHIFT_REPO_DIR\"/..; bower install) else (bower install) fi",
    "bundle-client": "browserify client/scripts/app.js -o public/scripts/bundle.js",
    "test": "mocha test/index.coffee --require should --compilers coffee:coffee-script/register",
    "devserver": "nodemon -e coffee,js,jade"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/am/www.bit-ink.com.git"
  },
  "keywords": [
    "bit-ink",
    "homepage"
  ],
  "author": "antsmiranda@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/am/www.bit-ink.com/issues"
  },
  "homepage": "https://github.com/am/www.bit-ink.com",
  "engines": {
    "node": ">= 0.12.2",
    "npm": ">= 2.7.4"
  },
  "browser": {
    "jquery": "./bower_components/jquery/dist/jquery.js",
    "prism": "./bower_components/prism/components/prism-core.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      "debowerify"
    ]
  },
  "browserify-shim": {
    "jquery": "jQuery",
    "prism": "Prism"
  },
  "devDependencies": {
    "bower": "^1.5.2",
    "browserify": "^11.0.1",
    "browserify-shim": "^3.8.10",
    "debowerify": "^1.3.1",
    "mocha": "^2.2.4",
    "nodemon": "^1.3.7",
    "should": "^7.0.1",
    "should-sinon": "0.0.3",
    "sinon": "^1.15.4",
    "source-map-support": "^0.2.10"
  },
  "dependencies": {
    "bluebird": "^2.9.25",
    "coffee-script": "^1.9.2",
    "express": "^4.12.3",
    "express-pjax": "git://github.com/optikfluffel/express-pjax.git",
    "github": "^0.2.4",
    "jade": "^1.9.2",
    "marked": "^0.3.3",
    "morgan": "^1.5.2",
    "nib": "^1.1.0",
    "node-cache": "^3.0.0",
    "rupture": "^0.6.1",
    "stylus": "^0.51.1"
  }
}
