---
import BaseHead from "../components/BaseHead.astro";
import Navigation from "../components/Navigation.astro";
import {
	SITE_TITLE,
	SITE_DESCRIPTION,
	SITE_AUTHOR,
	SITE_TOPIC,
} from "../consts";
import "@fontsource/abril-fatface";
import "@fontsource/karla";
import { Content as About } from "../content/pages/index.mdx";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col bg-white text-black font-sans">
		<Navigation />
		<header
			class="flex h-[80vh] px-4 justify-center items-center bg-cover bg-hero-background"
		>
			<div class="flex flex-col mt-10">
				<div class="text-center bg-white p-10 lg:p-16 pb-4 lg:pb-6">
					<h1 class="font-display font-bold text-6xl lg:text-8xl mb-4 lg:mb-8">
						{SITE_TITLE}
					</h1>
					<h2 class="text-xl lg:text-2xl font-bold">{SITE_AUTHOR}</h2>
				</div>
				<div class="text-center bg-black px-8 py-4">
					<h2 class="text-xl lg:text-2xl text-white">{SITE_TOPIC}</h2>
				</div>
			</div>
		</header>

		<main class="container mx-auto max-w-3xl pt-16 pb-32">
			<section
				class="p-8 prose prose-xl prose-a:text-ink prose-headings:font-display"
			>
				<About />
			</section>
		</main>
		<script
			src="https://cdn.amplitude.com/libs/analytics-browser-2.11.1-min.js.gz"
		></script>
		<script
			src="https://cdn.amplitude.com/libs/plugin-session-replay-browser-1.6.22-min.js.gz"
		></script>
		<script>
			window.amplitude.add(window.sessionReplay.plugin({ sampleRate: 1 }));
			window.amplitude.init("bcdc80af61926ecf2915584d5535e94b", {
				serverZone: "EU",
				autocapture: { elementInteractions: true },
			});
		</script>
	</body>
</html>
